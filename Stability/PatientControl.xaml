<UserControl x:Class="Stability.PatientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200" MinHeight="300">
    <Grid>
        <GroupBox Header="Информация о пациенте">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="83*" MinHeight="83"/>
                    <RowDefinition Height="48*" MinHeight="48"/>
                    <RowDefinition Height="48*" MinHeight="48"/>
                    <RowDefinition Height="48*" MinHeight="48"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" HorizontalAlignment="Left" Width="164" >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="text_Surname" Height="22" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="0,3"/>
                    <Label Content="Фамилия:" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="0" Grid.Column="0" Height="26" Width="62" Margin="0,1"/>
                    <TextBox x:Name="text_Name" Height="22" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="0,3"/>
                    <Label Content="Имя:" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="1" Grid.Column="0" Height="26" Margin="0,1" Width="36"/>
                    <TextBox x:Name="text_Patronymic" Height="22" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="0,2,0,3"/>
                    <Label Content="Отчество:" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="2" Grid.Column="0" Height="26" Margin="0,0,0,1" Width="63"/>

                </Grid>
                <GroupBox Header="Пол" Grid.Row="1" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <RadioButton Content="Мужской" Margin="5,0,10,0"/>
                        <RadioButton Content="Женский" Margin="0,0,5,0"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Дата рождения" Grid.Row="2" HorizontalAlignment="Left" Width="164">
                    <DatePicker x:Name="BirthDatePicker" FirstDayOfWeek="Monday" DisplayDateStart="1/1/1930" SelectedDateFormat="Short" VerticalContentAlignment="Center" BorderBrush="{x:Null}"/>
                </GroupBox>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24*" MinHeight="24"/>
                        <RowDefinition Height="24*" MinHeight="24"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Label Content="Рост:" VerticalContentAlignment="Center"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Margin="0,2" Width="39"/>
                        <Label Content="см" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Content="Вес:" VerticalContentAlignment="Center"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Margin="0,2" Width="39"/>
                        <Label Content="кг" VerticalContentAlignment="Center"/>
                        <Button Content="Вес" Width="45"/>

                    </StackPanel>
                </Grid>

            </Grid>
        </GroupBox>
        

    </Grid>
</UserControl>
