<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Stability" mc:Ignorable="d"
    x:Class="Stability.ResearchResults"
        
        Title="Результаты исследований" Height="300" Width="300" Topmost="True" WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <local:ResearchResultPresenter/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="26,36,0,0" TextWrapping="Wrap" Text="{Binding P}" VerticalAlignment="Top" Width="120" />
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Command="{Binding ButCommand}"/>


        <!--DataGrid x:Name="gridResults" /-->
    </Grid>
</Window>
